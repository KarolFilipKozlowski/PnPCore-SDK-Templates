@page "/"


<div class="container-fluid">
    <div class="row">
        <div class="col-12"><h1>Connect to SharePoint Online site</h1></div>
    </div>
    <div class="row">
        <div class="col-8">
            <input class="form-control" type="text" placeholder="https://grupasygnity.contoso.com/sites/siteName">
        </div>
        <div class="col-4">
            <button type="button" class="btn btn-primary">Connect</button>
        </div>
